{
  "name": "alexa-garmin-connect-fitness",
  "version": "1.0.0",
  "description": "Alexa Skill for Garmin Connect interaction",
  "main": "index.js",
  "scripts": {
    "invoke": "aws lambda invoke --function-name garminConnectFitness --payload fileb://test/events/alexa-start-session.json test/out.txt && cat test/out.txt",
    "test:unit": "nyc --reporter=lcov --reporter=text mocha --timeout=7000 test/unit/*",
    "test:integration": "mocha --timeout=90000 test/integration/*",
    "test": "npm run test:unit",
    "deploy-lambda": "npm prune --production && npm run lambda-zip && npm run lambda-update && npm install",
    "lambda-zip": "zip -x 'node_modules/.cache/*' -r index.zip node_modules && cd src && zip ../index.zip *",
    "lambda-update": "aws lambda update-function-code --function-name garminConnectFitness --zip-file fileb://index.zip",
    "deploy-skill": "ask deploy --target skill",
    "deploy-model": "ask deploy --target model"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgruendel/alexa-garmin-connect-fitness.git"
  },
  "keywords": [
    "alexa",
    "skill",
    "garmin",
    "connect"
  ],
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sgruendel/alexa-garmin-connect-fitness/issues"
  },
  "homepage": "https://github.com/sgruendel/alexa-garmin-connect-fitness#readme",
  "dependencies": {
    "ask-sdk-core": "2.14.0",
    "ask-sdk-model": "1.86.0",
    "cheerio": "1.1.2",
    "i18next": "25.5.3",
    "i18next-sprintf-postprocessor": "0.2.2",
    "request": "2.88.2",
    "request-promise-native": "1.0.9",
    "winston": "3.18.3"
  },
  "devDependencies": {
    "alexa-skill-test-framework": "1.2.4",
    "chai": "6.2.0",
    "chai-as-promised": "8.0.2",
    "eslint": "9.38.0",
    "eslint-config-strongloop": "2.1.0",
    "mocha": "11.7.4",
    "nyc": "17.1.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "extends": "strongloop",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
